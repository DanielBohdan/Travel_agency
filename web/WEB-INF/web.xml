<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Travel agency</display-name>

    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>

<!--          Controller          -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>org.bohdan.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


<!--          Locale              -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>en</param-value>
    </context-param>

    <context-param>
        <param-name>locales</param-name>
        <param-value>EN RU</param-value>
    </context-param>

    <!--    Encoding support filter-->
    <!--=============================================================-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.bohdan.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/jsp/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <!--=============================================================-->

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>org.bohdan.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>
                accountAdmin listTours createTour editTour deleteTour listUsers searchUser
                updateStatusUser updateRole listOrders updateStatusOrder updateDiscount
            </param-value>
        </init-param>
        <init-param>
            <param-name>manager</param-name>
            <param-value>listOrders updateStatusOrder updateDiscount</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>accountUser registerTourView registerTour</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>noCommand viewTours viewTour logout</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>noCommand login viewTours viewTour </param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--=============================================================-->

    <listener>
        <listener-class>org.bohdan.web.listener.ContextListener</listener-class>
    </listener>

<!--    Error page      -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/error_page.jsp</location>
    </error-page>
</web-app>